{
  "name": "vwork",
  "version": "0.1.5",
  "description": "VWork â€” AI-powered work assistant for everyone",
  "type": "module",
  "bin": {
    "vwork": "dist/index.js"
  },
  "files": [
    "dist/",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "build:web": "vite build --config src/web/vite.config.ts",
    "build:all": "bun run build && bun run build:web",
    "dev:server": "bun --watch src/index.ts serve",
    "dev:web": "vite --config src/web/vite.config.ts",
    "link": "bun run build && bun link",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "cron-parser": "^5.5.0",
    "hono": "^4.11.9",
    "ink": "^5.1.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "marked": "17",
    "marked-terminal": "^7.3.0",
    "openai": "^6.22.0",
    "picocolors": "^1.1.1",
    "react": "^18.3.1",
    "react-devtools-core": "^4.19.1",
    "react-dom": "^18.3.1",
    "smol-toml": "^1.6.0",
    "sqlite-vec": "^0.1.7-alpha.2",
    "turndown": "^7.2.2"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/bun": "^1.3.9",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/turndown": "^5.0.6",
    "@vitejs/plugin-react": "^5.1.4",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.1"
  }
}
